<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity"
    android:id="@+id/layout">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Plant to Database"
        android:id="@+id/button"
        android:onClick="addPlant"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Plant Name: "
        android:id="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Plant Type: "
        android:id="@+id/textView2"
        android:layout_marginTop="92dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plantNameEditText"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plantTypeEditText"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/plantNameEditText"
        android:layout_alignStart="@+id/plantNameEditText"
        android:layout_alignRight="@+id/plantNameEditText"
        android:layout_alignEnd="@+id/plantNameEditText" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View All Data"
        android:id="@+id/button2"
        android:onClick="viewResults"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter type for query:"
        android:id="@+id/textView"
        android:layout_above="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectTypeEditText"

        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"

        android:layout_toEndOf="@+id/textView"

        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Query Results"
        android:id="@+id/button3"
        android:onClick="viewQueryResults"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/selectTypeEditText"
        android:layout_alignEnd="@+id/selectTypeEditText" />

</RelativeLayout>
