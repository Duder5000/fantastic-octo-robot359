<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/layout">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Plant to Database"
        android:id="@+id/button"
        android:onClick="addPlant"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Plant Name: "
        android:id="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Plant Type: "
        android:id="@+id/textView2"
        android:layout_marginTop="92dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plantNameEditText"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plantTypeEditText"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/plantNameEditText"
        android:layout_alignStart="@+id/plantNameEditText"
        android:layout_alignRight="@+id/plantNameEditText"
        android:layout_alignEnd="@+id/plantNameEditText" />

<!--    New Stuff-->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/latinEditText"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/plantNameEditText"
        android:layout_alignStart="@+id/plantNameEditText"
        android:layout_alignRight="@+id/plantNameEditText"
        android:layout_alignEnd="@+id/plantNameEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locEditText"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/plantNameEditText"
        android:layout_alignStart="@+id/plantNameEditText"
        android:layout_alignRight="@+id/plantNameEditText"
        android:layout_alignEnd="@+id/plantNameEditText" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="196dp"
        android:onClick="viewResults"
        android:text="View All Data" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button"
        android:layout_marginBottom="162dp"
        android:text="Enter type for query:" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectTypeEditText"

        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"

        android:layout_toEndOf="@+id/textView"

        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView"

        />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"
        android:onClick="viewQueryResults"
        android:text="View Query Results" />

    <Button
        android:id="@+id/button4"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button3"
        android:layout_below="@+id/button3"
        android:layout_marginTop="-87dp"
        android:onClick="delete"
        android:text="Delete Selection" />

</RelativeLayout>
